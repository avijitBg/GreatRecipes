@model IEnumerable<Recipe>

@{
    ViewBag.Title = "All Recipes";
    Layout = "_AdminLayout";
}

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Name</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-right">@item.RecipeId</td>
            <td>@item.RecipeName</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="RecipeId" value="@item.RecipeId" />

                    <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-recipeId="@item.RecipeId">
                        Edit
                    </a>
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<a asp-controller="Admin" asp-action="AddRecipe"><h5 style="text-align:center" class="align-content-center">Add New Recipe</a></h4><br>
