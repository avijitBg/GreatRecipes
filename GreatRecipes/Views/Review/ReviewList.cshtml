@model List<Review>

@{
    ViewBag.Title = "Reviews List";
}

<br />
<table class="table table-sm table-bordered table-hover">
    <thead class="thead-light">
        <tr>
            <th>Id</th>
            <th>Comments</th>
            <th>Rate</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.ReviewId</td>
                <td>@r.Comment</td>
                <td>@r.Rate</td>
            </tr>
        }

    </tbody>

</table>
<div style="text-align:center">
    <a asp-action="RecipeList" asp-controller="Home"><h4>View Another Recipe</h4></a>
    <a asp-action="Index" asp-controller="Home"><h4>Back to Homepage</h4></a>
</div>
